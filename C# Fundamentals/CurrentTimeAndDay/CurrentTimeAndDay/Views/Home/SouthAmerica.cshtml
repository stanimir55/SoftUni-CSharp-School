        <title>Current Time and Day</title>
        <script>function displayTime() {
                var date = new Date();
                var time = date.toLocaleTimeString();
                var day = date.toLocaleDateString();
                document.getElementById("time").innerHTML = time;
                document.getElementById("day").innerHTML = day;
            }

            function displayTimeInCity(city) {
                var time;
                if (city === 'Buenos Aires') {
                    time = new Date().toLocaleString("cz-GR", { timeZone: "America/Buenos_Aires" });
                    document.getElementById("buenos aires-time").innerHTML = time;
                } else if (city === 'Surce') {
                    time = new Date().toLocaleString("cz-GR", { timeZone: "America/La_Paz" });
                    document.getElementById("surce-time").innerHTML = time;
                } else if (city === 'Brasilia') {
                    time = new Date().toLocaleString("cz-GR", { timeZone: "America/Sao_Paulo" });
                    document.getElementById("brasilia-time").innerHTML = time;
                } else if (city === 'Santiago') {
                    time = new Date().toLocaleString("cz-GR", { timeZone: "America/Santiago" });
                    document.getElementById("santiago-time").innerHTML = time;
                } else if (city === 'Bogota') {
                    time = new Date().toLocaleString("cz-GR", { timeZone: "America/Bogota" });
                    document.getElementById("bogota-time").innerHTML = time;
                } else if (city === 'Quito') {
                    time = new Date().toLocaleString("cz-GR", { timeZone: "America/Bogota" });
                    document.getElementById("quito-time").innerHTML = time;
                } else if (city === 'Georgetown') {
                    time = new Date().toLocaleString("cz-GR", { timeZone: "America/Santiago" });
                    document.getElementById("georgetown-time").innerHTML = time;
                } else if (city === 'Asuncion') {
                    time = new Date().toLocaleString("cz-GR", { timeZone: "America/Asuncion" });
                    document.getElementById("asuncion-time").innerHTML = time;
                } else if (city === 'Lima') {
                    time = new Date().toLocaleString("cz-GR", { timeZone: "America/Lima" });
                    document.getElementById("lima-time").innerHTML = time;
                } else if (city === 'Paramaribo') {
                    time = new Date().toLocaleString("cz-GR", { timeZone: "America/Paramaribo" });
                    document.getElementById("paramaribo-time").innerHTML = time;
                } else if (city === 'Montevideo') {
                    time = new Date().toLocaleString("cz-GR", { timeZone: "America/Montevideo" });
                    document.getElementById("montevideo-time").innerHTML = time;
                } else if (city === 'Caracas') {
                    time = new Date().toLocaleString("cz-GR", { timeZone: "America/Caracas" });
                    document.getElementById("caracas-time").innerHTML = time;
                }
            }

            setInterval(displayTime, 1000);</script>
    </head>
    <body onload="displayTime()">
